<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_spaces"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csci310.parkhere.ui.SpacesFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/spacesTitle_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spaces fragment" >
    </TextView>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000000"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/spaces_addbutton"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorMainFont"
        android:onClick="onAddSpaceClick"
        />

</FrameLayout>
