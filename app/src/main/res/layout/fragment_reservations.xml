<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csci310.parkhere.ui.ReservationsFragment">
    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="574dp"-->
        <!--android:layout_marginTop="12dp">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/res_label"
                android:id="@+id/reservationsTextView"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36dp"
                android:textAlignment="center"/>

            <ListView
                android:id="@+id/futureList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorMainFont"
                android:background="@color/colorAccent"
                />

            <ListView
                android:id="@+id/passedList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorMainFont"
                android:background="@color/colorGrey"
                />
        </LinearLayout>
    <!--</ScrollView>-->
</FrameLayout>
